@model IEnumerable<JokesMVCWebApplication.Models.Joke>

<br />
<div class="container row p-0 m-0">
    <div class="col-9">
        <h2 class="text-info">Joke List</h2>
    </div>
    <div class="col-3">
        <a class="btn btn-info form-control text-white" asp-controller="Jokes" asp-action="Create">Create New Joke</a>        
    </div>


    <div class="col-12 border p-3 mt-3">
        <form method="post">
            @if (Model.Any())
            {
                <table class="table table-striped border">
                    <tr class="table-secondary">
                        <th>
                            <label asp-for="@Model.FirstOrDefault().Question"></label>
                        </th>
                        <th>
                            @*Another way to display name of property*@
                            @*@Html.DisplayNameFor(m=>m.Books.FirstOrDefault().Author)*@
                            <label asp-for="@Model.FirstOrDefault().Answer"></label>
                        </th>
                        <th>
                            <label asp-for="@Model.FirstOrDefault().Author"></label>
                        </th>
                        <th>

                        </th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(m => item.Question)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Answer)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Author)
                            </td>
                            <td>
                                <button asp-controller="Jokes" asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('Are you sure you want to delete?')" class="btn btn-danger btn-sm">Delete</button>
                                <a asp-controller="Jokes" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm text-white">Edit</a>
                            </td>
                        </tr>
                    }
                </table>
            }
            else
            {
                <p>No jokes available.</p>
            }
        </form>
    </div>
</div>